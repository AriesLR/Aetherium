@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body

            <BlazoredToasts Position="ToastPosition.BottomCenter"
                            Timeout="3"
                            ShowProgressBar="true"
                            RemoveToastsOnNavigation="true"
                            MaxToastCount="1"/>
        </article>
        <div class="bottombar">
            <ProcessMonitor />
        </div>
    </main>

</div>
